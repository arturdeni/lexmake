// src/components/Home/HomeSkills.astro
---

<section class="home-skills">
  <div class="home-skills__container">
    <!-- Título de la sección -->
    <div class="home-skills__header">
      <h3 class="home-skills__title">
        <span>DESIGN</span>
        <span class="h3-cursiva">Portfolio</span>
      </h3>
    </div>

    <!-- Grid de imágenes del portfolio -->
    <div class="home-skills__portfolio-grid">
      <div class="portfolio-item">
        <img
          src="/assets/portfolio/lexmake-portfolio-1.webp"
          alt="Portfolio Project 1"
        />
      </div>
      <div class="portfolio-item">
        <img
          src="/assets/portfolio/lexmake-portfolio-2.webp"
          alt="Portfolio Project 2"
        />
      </div>
      <div class="portfolio-item">
        <img
          src="/assets/portfolio/lexmake-portfolio-3.webp"
          alt="Portfolio Project 3"
        />
      </div>
      <div class="portfolio-item">
        <img
          src="/assets/portfolio/lexmake-portfolio-4.webp"
          alt="Portfolio Project 4"
        />
      </div>
    </div>

    <!-- Botón Ver Más -->
    <div class="home-skills__view-more">
      <a href="/portfolio" class="view-more-link">VER MÁS</a>
    </div>

    <!-- Sección MY SKILLS -->
    <div class="home-skills__skills-section">
      <h4 class="skills-header">MY SKILLS</h4>

      <div class="skills-grid">
        <!-- Fila 1 -->
        <div class="skill-item skill-item--large">Photoshop</div>
        <div class="skill-item skill-item--cursive">Adobe illustrator</div>

        <!-- Fila 2 -->
        <div class="skill-item skill-item--large">AFTER EFFECTS</div>
        <div class="skill-item skill-item--cursive">Prepimer Pro</div>
        <div class="skill-item skill-item--large">Dimensions</div>

        <!-- Fila 3 -->
        <div class="skill-item skill-item--cursive">indesign</div>
        <div class="skill-item skill-item--large">FIGMA</div>
        <div class="skill-item skill-item--cursive">Strikingly</div>
        <div class="skill-item skill-item--large">WORDPRESS</div>
      </div>
    </div>
  </div>
</section>

<style>
  .home-skills {
    background-color: var(--color-grey);
    position: relative;
    z-index: 10; /* Para pasar por encima del hero sticky */
    margin-top: -300px; /* Para superponer con el hero */
    padding: var(--spacing-xl) 0;
  }

  .home-skills__container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--container-padding);
    display: flex;
    flex-direction: column;
  }

  /* === HEADER === */
  .home-skills__header {
    text-align: left;
  }

  .home-skills__title {
    margin: var(--spacing-lg);
    display: flex;
    align-items: baseline;
  }

  .home-skills__title span:first-child {
    font-family: var(--font-hanken);
    font-weight: 500;
    font-style: normal;
  }

  /* === PORTFOLIO GRID === */
  .home-skills__portfolio-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    margin-bottom: var(--spacing-xl);
  }

  .portfolio-item {
    aspect-ratio: 4/3;
    background-color: var(--color-black);
    overflow: hidden;
  }

  .portfolio-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* === VER MÁS === */
  .home-skills__view-more {
    text-align: right;
    margin-bottom: var(--spacing-xxl);
  }

  /* === SKILLS SECTION === */
  .home-skills__skills-section {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
    margin-top: var(--spacing-xxl);
  }

  .skills-header {
    text-align: center;
    margin: 0;
    font-size: var(--h5-size);
    font-weight: 500;
    letter-spacing: 0.1em;
  }

  /* === SKILLS GRID === */
  .skills-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-lg) var(--spacing-xl);
    max-width: 800px;
    margin: 0 auto;
  }

  .skill-item {
    font-size: var(--h4-size);
    line-height: 1.2;
    margin: 0;
    white-space: nowrap;
  }

  .skill-item--large {
    font-family: var(--font-hanken);
    font-weight: 500;
    font-style: normal;
    text-transform: uppercase;
  }

  .skill-item--cursive {
    font-family: var(--font-gallery);
    font-weight: 400;
    font-style: italic;
  }

  /* === RESPONSIVE === */
  @media (max-width: 1024px) {
    .home-skills__portfolio-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .skills-grid {
      gap: var(--spacing-md) var(--spacing-lg);
    }

    .skill-item {
      font-size: calc(var(--h4-size) * 0.8);
    }
  }

  @media (max-width: 768px) {
    .home-skills {
      padding: var(--spacing-xl) 0;
    }

    .home-skills__container {
      gap: var(--spacing-xl);
    }

    .home-skills__title {
      flex-direction: column;
      gap: 0;
      text-align: center;
      margin: 0 var(--spacing-lg);
    }

    .home-skills__portfolio-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .home-skills__view-more {
      text-align: center;
      margin-bottom: var(--spacing-xl);
    }

    .skills-grid {
      flex-direction: column;
      gap: var(--spacing-md);
      text-align: center;
    }

    .skill-item {
      font-size: calc(var(--h4-size) * 0.7);
    }
  }

  @media (max-width: 480px) {
    .skill-item {
      font-size: calc(var(--h4-size) * 0.6);
    }
  }

  /* === PREPARAR PARA ANIMACIONES GSAP === */
  /* Por defecto los elementos son visibles */
  /* GSAP los ocultará antes de animar con gsap.set() */
</style>

<script>
  // Importar GSAP y ScrollTrigger
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  // Registrar el plugin ScrollTrigger
  gsap.registerPlugin(ScrollTrigger);

  // Función para inicializar las animaciones
  const initHomeSkillsAnimations = () => {
    // Verificar que el elemento existe
    const homeSkills = document.querySelector(".home-skills");
    if (!homeSkills) return;

    // Establecer estado inicial de los elementos (ocultos)
    gsap.set(".home-skills__title span", { opacity: 0, y: 30 });
    gsap.set(".portfolio-item", { opacity: 0, y: 50 });
    gsap.set(".view-more-link", { opacity: 0, y: 20 });
    gsap.set(".skills-header", { opacity: 0, y: 30 });
    gsap.set(".skill-item", { opacity: 0, y: 20 });

    // Animar el título
    gsap.to(".home-skills__title span", {
      opacity: 1,
      y: 0,
      duration: 0.8,
      stagger: 0.2,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".home-skills__title",
        start: "top 80%",
        toggleActions: "play none none none",
      },
    });

    // Animar los items del portfolio con stagger
    gsap.to(".portfolio-item", {
      opacity: 1,
      y: 0,
      duration: 0.8,
      stagger: 0.15,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".home-skills__portfolio-grid",
        start: "top 80%",
        toggleActions: "play none none none",
      },
    });

    // Animar el botón "Ver más"
    gsap.to(".view-more-link", {
      opacity: 1,
      y: 0,
      duration: 0.6,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".view-more-link",
        start: "top 85%",
        toggleActions: "play none none none",
      },
    });

    // Animar el header de skills
    gsap.to(".skills-header", {
      opacity: 1,
      y: 0,
      duration: 0.8,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".skills-header",
        start: "top 80%",
        toggleActions: "play none none none",
      },
    });

    // Animar los skill items con stagger
    gsap.to(".skill-item", {
      opacity: 1,
      y: 0,
      duration: 0.6,
      stagger: 0.08,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".skills-grid",
        start: "top 80%",
        toggleActions: "play none none none",
      },
    });

    console.log("HomeSkills animations initialized");
  };

  // Ejecutar cuando el DOM esté listo
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initHomeSkillsAnimations);
  } else {
    initHomeSkillsAnimations();
  }
</script>
