---
// src/components/Layout/Navigation.astro
// Navegación principal para desktop
import Button from "../UI/Button.astro";
---

<nav class="navigation">
  <ul class="nav-list">
    <li class="nav-item">
      <a href="/solutions" class="nav-link">SOLUTIONS</a>
    </li>
    <li class="nav-item">
      <a href="/portfolio" class="nav-link">PORTFOLIO</a>
    </li>
    <li class="nav-item">
      <a href="/resources" class="nav-link">RESOURCES</a>
    </li>
  </ul>

  <!-- Botón Contact usando el componente Button -->
  <Button href="/contact" class="contact-button-wrapper">CONTACT</Button>
</nav>

<style>
  .navigation {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    position: absolute;
    left: 0;
    right: 0;
    padding: 0 var(--container-padding);
    pointer-events: none; /* Para que no interfiera con clics */
  }

  .navigation > * {
    pointer-events: auto; /* Reactivar eventos para elementos hijos */
  }

  .nav-list {
    display: flex;
    align-items: center;
    gap: var(--spacing-xl);
    list-style: none;
    margin: 0;
    padding: 0;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .nav-item {
    position: relative;
    min-width: 120px;
  }

  .nav-link {
    font-family: var(--font-hanken);
    font-size: 20px;
    font-weight: 500;
    color: var(--color-black);
    text-decoration: none;
    padding: var(--spacing-sm) 0;
    display: block;
  }

  .nav-link:hover {
    font-family: var(--font-gallery);
    font-style: italic;
  }

  /* Wrapper para el botón Contact alineado a la derecha */
  .contact-button-wrapper {
    margin-left: auto;
  }

  /* === RESPONSIVE === */
  @media (max-width: 768px) {
    .navigation {
      display: none;
    }
  }
</style>
