---
// src/components/Resources/ResourcesBlocks.astro
const resources = [
  {
    title: "RETÍCULA ILLUSTRATOR LOGO MAKER",
    description:
      "Plantilla base para construir logotipos con precisión, coherencia visual y control total de proporciones en Illustrator.",
    image: "/assets/resources/reticulas.webp",
    downloadLink: "/assets/resources/RETICULAS_LEXMAKE.ai",
  },
  {
    title: "BRANDING PRESENTATION MOCKUPS",
    description:
      "Mockups listos para presentar tu identidad de marca de forma clara, atractiva y profesional en distintos soportes.",
    image:
      "/assets/resources/branding.webp",
    downloadLink: "https://drive.google.com/AQUI_TU_ENLACE_DE_DESCARGA", // TODO: Subir Mockups.zip a Google Drive y poner el enlace
  },
  {
    title: "INITIAL BRIEF TO MAKE A WEBSITE",
    description:
      "Documento guía para definir objetivos, estructura y necesidades clave antes de iniciar el diseño de un sitio web.",
    image: "/assets/resources/briefing-img.webp",
    downloadLink: "/assets/resources/BREIFINGS.zip",
  },
  {
    title: "LOGO PROPOSAL PRESENTATION",
    description:
      "Documento diseñado para presentar propuestas de logotipo de forma clara, estratégica y profesional, explicando el concepto, las decisiones visuales y su correcta aplicación.",
    image:
      "/assets/resources/logoProposal.webp",
    downloadLink: "/assets/resources/Presentación propuesta Logo.ai.zip",
  },
];
---

<section class="resources-blocks">
  <div class="resources-blocks__container">
    <div class="resources-blocks__grid">
      {
        resources.map((resource) => (
          <article class="resource-card">
            <div class="resource-card__image-wrapper">
              <img
                src={resource.image}
                alt={resource.title}
                class="resource-card__image"
                loading="lazy"
              />
            </div>
            <div class="resource-card__content">
              <h3 class="resource-card__title">{resource.title}</h3>
              <p class="resource-card__description">{resource.description}</p>
              <a
                href={resource.downloadLink}
                class="normal-link resource-card__link"
              >
                Descargar
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .resources-blocks {
    width: 100%;
    background-color: var(--color-grey);
    padding-bottom: var(--spacing-4xl);
  }

  .resources-blocks__container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  .resources-blocks__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-xl);
  }

  /* === RESOURCE CARD === */
  .resource-card {
    display: flex;
    flex-direction: column;
    background-color: var(--color-grey);
  }

  .resource-card__image-wrapper {
    width: 100%;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background-color: #d9d9d9;
    margin-bottom: var(--spacing-lg);
  }

  .resource-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .resource-card:hover .resource-card__image {
    transform: scale(1.05);
  }

  .resource-card__content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .resource-card__title {
    font-family: var(--font-hanken);
    font-size: 18px;
    font-weight: 500;
    line-height: 1.2;
    color: var(--color-black);
    margin: 0;
  }

  .resource-card__description {
    font-family: var(--font-hanken);
    font-size: 13px;
    font-weight: 300;
    line-height: 1.4;
    color: var(--color-black);
    margin: 0;
  }

  .resource-card__link {
    font-size: 20px;
    width: fit-content;
  }

  .resource-card__link::after {
    bottom: -4px;
  }

  /* === RESPONSIVE === */
  @media (max-width: 768px) {
    .resources-blocks {
      padding-bottom: var(--spacing-xxl);
    }

    .resources-blocks__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
    }

    .resource-card {
      margin-bottom: var(--spacing-lg);
    }

    .resource-card__image-wrapper {
      aspect-ratio: 1 / 1;
    }

    .resource-card__title {
      font-size: 16px;
    }

    .resource-card__description {
      font-size: 12px;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .resources-blocks__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1025px) {
    .resources-blocks__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
