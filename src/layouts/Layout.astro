---
// src/layouts/Layout.astro
export interface Props {
  title: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
}

const {
  title,
  description = "LexMake - Graphic Design Portfolio. Creating visual solutions that communicate and connect.",
  image = "/og-image.jpg",
  noIndex = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

import { ClientRouter } from 'astro:transitions';
import "../styles/fonts.css";
import "../styles/variables.css";
import "../styles/global.css";

// Importar componentes
import Header from "../components/Layout/Header.astro";
import Footer from "../components/Layout/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Client Router for page transitions -->
    <ClientRouter fallback="none" />

    <!-- Basic Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Robots -->
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Fonts locales -->
    <link
      rel="preload"
      href="/fonts/HankenGrotesk-Light.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/HankenGrotesk-Medium.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

  </head>

  <body>
    <!-- Header/Navigation -->
    <Header />

    <!-- Main Content -->
    <main id="main">
      <slot />
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Script para manejar carga de imágenes en transiciones -->
    <script>
      document.addEventListener('astro:before-swap', async (event) => {
        // Obtener todas las imágenes de la nueva página
        const images = event.newDocument.querySelectorAll('img');

        // Crear promesas para esperar que todas las imágenes se carguen
        const imagePromises = Array.from(images).map((img) => {
          // Si la imagen ya está cargada, resolver inmediatamente
          if (img.complete) return Promise.resolve();

          // Si no, esperar a que se cargue
          return new Promise((resolve) => {
            img.addEventListener('load', resolve);
            img.addEventListener('error', resolve); // Resolver incluso si falla
          });
        });

        // Esperar a que todas las imágenes se carguen antes de continuar
        await Promise.all(imagePromises);
      });
    </script>

    <!-- Script global para reinicializar componentes después de transiciones -->
    <script>
      function initializeComponents() {
        // Agregar clase gsap-loaded a todos los componentes que la necesiten
        const componentsToInit = [
          '.hero',
          '.home-behind',
          '.home-skills',
          '.home-closing',
          '.portfolio-cta',
          '.solutions-folders',
          '.work-plan',
          '.footer',
          '.header'
        ];

        componentsToInit.forEach(selector => {
          const element = document.querySelector(selector);
          if (element && !element.classList.contains('gsap-loaded')) {
            element.classList.add('gsap-loaded');
          }
        });
      }

      // Ejecutar en carga inicial
      document.addEventListener('DOMContentLoaded', initializeComponents);

      // Ejecutar después de cada transición de página
      document.addEventListener('astro:page-load', initializeComponents);
    </script>
  </body>
</html>

<style is:global>
  /* Layout específico */
  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  #main {
    flex: 1;
  }

  /* Preparar para animaciones GSAP */
  #main,
  #footer {
    will-change: transform;
  }
</style>
